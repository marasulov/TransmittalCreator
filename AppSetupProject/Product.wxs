<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product
    Id="C962B09D-9E20-43BC-B99B-78899184858C"
    Name="AppSetupProject"
    Language="1049" Version="1.0.0.0"
    Manufacturer="MYusuf"
    UpgradeCode="f4efffd3-3579-432b-8e98-d9463363875e"
    Codepage="1251">
    <Package
			SummaryCodepage ="1251"
      InstallerVersion="200"
      Compressed="yes"
      InstallScope="perMachine"
      InstallPrivileges="elevated" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <Media Id="1" Cabinet="cab1.cab" EmbedCab="yes"/>

    <Feature Id="ProductFeature" Title="$(var.SolutionName)" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>

  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="CommonAppDataFolder">
        <Directory Id="adsk_data" Name="Autodesk">
          <Directory Id="adsk_plugins" Name="ApplicationPlugins">
            <Directory Id="INSTALLFOLDER" Name="$(var.SolutionName).bundle" />
          </Directory>
        </Directory>
      </Directory>
    </Directory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <!-- TODO: Remove the comments around this Component element and the ComponentRef below in order to add resources to this installer. -->
      <Component Id="ProductComponent">
      <!-- TODO: Insert files, registry keys, and other resources here. -->
      <File Name="PackageContent.xml" Source="PackageContents.xml" DiskId="1" KeyPath="yes"/>
      </Component>
      <Component Id="DllComponent">
        <File Id="DllFile" Name="$(var.TransmittalCreator.TargetFileName)" Source="$(var.TransmittalCreator.TargetPath)" DiskId="1"/>
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
