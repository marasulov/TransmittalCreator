<Window x:Class="TransmittalCreator.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransmittalCreator"
        mc:Ignorable="d"
        Height="Auto"
        Width="Auto"
        WindowStyle="ToolWindow"
        AllowsTransparency="False"
        ShowInTaskbar="False"
        BorderBrush="Transparent"
        Foreground="Black"
        Background="DimGray"
        ResizeMode="NoResize"
        FontFamily="ISOCPEUR"
        FontSize="14"
        SizeToContent="WidthAndHeight">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Gray" Background="Gray" BorderThickness="1">
            <Grid Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Drawing Path"/>
                    <TextBlock Width="100"></TextBlock>
                </StackPanel>


            </Grid>
        </Border>
        

    </Grid>
</Window>
